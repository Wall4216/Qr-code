<Page x:Class="AmirhanovExam.Pages.AddMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmirhanovExam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="250" VerticalAlignment="Center">
            <TextBlock Text="Имя"></TextBlock>
            <TextBox Text="{Binding Name}"></TextBox>
            <TextBlock Text="Описание"></TextBlock>
            <TextBox Text="{Binding Description}"></TextBox>
            <TextBlock Text="Вес"></TextBlock>
            <TextBox Text="{Binding Weight}"></TextBox>
            <TextBlock Text="Цена"></TextBlock>
            <TextBox Text="{Binding Price}"></TextBox>
            <TextBlock Text="Работник"></TextBlock>
            <ComboBox Margin=" 0 5 0 0" Name="CBEmployee" SelectedItem="{Binding EmployeeId}" DisplayMemberPath="Name"></ComboBox>
            <Button Margin="0 5 0 0" Name="BAdd" Content="Добавить в меню" Click="BAdd_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
