<Page x:Class="AmirhanovExam.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmirhanovExam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Margin="0 0 0 5" Text="Login"></TextBlock>
            <TextBox Margin="0 0 0 5" Name="TBLogin"></TextBox>
            <TextBlock Margin="0 0 0 5" Text="Password"></TextBlock>
            <PasswordBox Margin="0 0 0 5" Name="TBPassword"></PasswordBox>
            <Button Name="BLogin" Content="Войти" Click="BLogin_Click"></Button>
            <Image x:Name="QRCodeImage" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
